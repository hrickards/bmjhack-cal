<% if current_user.administrator? %>
  <%= button_to 'New Event', new_event_path, :method => :get, :class => :btn, :id => :new_event_button %>
<% end %>

<div id="filters_container">
  <div id="filters">
    <div id="filter_title">
      <h2>Filter by:</h2>
    </div>

    <div class="field">
      <%= label :event, :course %><br>
      <%= select :event, :course_list, COURSES.map{|x| [x,x]}, {:selected => current_user.courses}, {:multiple => true} %>
    </div>

    <div class="field">
      <%= label :event, :year %><br>
      <%= select :event, :year_list, YEARS.map{|x| [x,x]}, {:selected => current_user.years}, {:multiple => true} %>
    </div>

    <div class="field">
      <%= label :event, :tags %><br>
      <%= select :event, :tag_list, TAGS.map{|x| [x,x]}, {}, {:multiple => true} %>
    </div>
  </div>
</div>

<div id="calendar">
</div>

<div class="right_hand_box" id="event_details">
  Mouseover an event to view details
</div>

<div class="right_hand_box" id="your_events">
  <h4>Your upcoming sessions:</h4>
  <ul>
    <% @your_events.each do |event| %>
      <% event_string = "#{event['title']}, #{event['start_datetime']}" %>
      <li><%= link_to event_string, event_path(event) %></li>
    <% end %>
  </ul>
</div>
