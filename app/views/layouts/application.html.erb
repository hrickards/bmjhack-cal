<!DOCTYPE html>
<html>
<head>
  <title>Cal2</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag    "fullcalendar", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag    "skins", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag    "sets", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>

</head>
<body>
  <p id="notice"><%= notice %></p>
  <p id="alert"><%= alert %></p>
  <% if current_user %>
    Logged in as <%= current_user.name %> | 
    <%= link_to "Log out", destroy_user_session_path, method: :delete %>
  <% else %>
    <%= link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2) %>
  <% end %>

  <% if current_user %>
    <div>
      <%= link_to "Events", events_path %> | <%= link_to "iCal", calendar_path(current_user, :format => :ical) %>
    </div>
  <% end %>

<%= yield %>

</body>
</html>
